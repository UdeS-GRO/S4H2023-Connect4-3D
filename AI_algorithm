from GameBoardRepresentation import gameboard

class AI:
    def __init__(self):
        self.gm = gameboard()
        self.possible_plays = []
    def get_plays(self):
        for i in range(self.gm.row_total):
            for j in range(self.gm.column_total):
                for k in range(self.gm.column_total):
                    if self.gm.board[i][j][k] == 0:  
                        self.possible_plays.append([i,j,k])
                        break

    #def rate_play(self):

    #def choose_play(self):

if __name__=="__main__":

    AI = AI()
    AI.get_plays()
    #print(AI.gm.board)
    print(AI.possible_plays)
